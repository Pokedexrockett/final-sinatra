<h1>Login Form</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<form action="/login" method="POST">
  <p>Email: <input type="text" name="user[email]" /></p>
  <p>Password: <input type="password" name="user[password]" /></p>
  <input type="submit" value="Log In">
</form>
