<h1>Log New Strain</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<br></br>

<form action="/strains" method="POST">
<label for="name">Name: </label>
<input type="text" name="name" id="name" value="<%= @strain.name %>"/>

<br></br>

<label for="date">Date: </label>
<input type="date" name="date" id="date" min="2021-01-01" max="2029-12-31" value="<%= @strain.date %>"/>

<br></br>

<label for="form">Form:  $</label>
<input type="text" name="form" id="form" value="<%= @strain.form %>"/>

<br></br>

<label for="thc">THC: </label>
<input type="number" name="thc" id="thc" min="0.01" step="0.01" max="9999.99" value="<%= @strain.thc %>"/>

<br></br>

<label for="CBD">CBD: </label>
<input type="number" name="cbd" id="cbd" min="0.01" step="0.01" max="9999.99" value="<%= @strain.cbd %>"/>
<br></br>

<label for="review">Review: </label>
<input type="text" name="review" id="review" value="<%= @strain.review %>"/>

<br></br>

  <input type="submit" value="Create strain"/>
</form>