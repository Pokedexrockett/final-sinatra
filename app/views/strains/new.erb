<h1>Log New Strain</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<form action="/strains" method="POST">
<p for="name">Name: 
<input type="text" name="name" id="name"/></p>

<p>Date: 
<input type="date" name="date" id="date" min="2021-01-01" max="2029-12-31"/></p>

<p>Form:  
<input type="text" name="form" id="form"/></p>

<p>THC: 
<input type="number" name="thc" id="thc" min="0.01" step="0.01" max="9999.99"/></p>

<p>CBD: 
<input type="number" name="cbd" id="cbd" min="0.01" step="0.01" max="9999.99"/></p>

<p>Review: 
<input type="text" name="review" id="review"/></p>

  <input type="submit" value="Create strain"/>
</form>